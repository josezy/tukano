#!/bin/bash

REPO_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )"/.. && pwd )"

function info {
    echo -e "\\n$(tput bold)$(tput setaf 4)" "$@" "$(tput sgr0)"
}
function success {
    echo -e "\\n$(tput bold)" "$@" "$(tput sgr0)"
}
function error {
    echo -e "\\n$(tput bold)$(tput setaf 1)" "$@" "$(tput sgr0)"
}


success " ðŸ”µ    Setup: Development Machine w/ supervisord"
    if [[ "$(uname)" != 'Linux' ]]; then
        error "Not on Linux!: $(uname)"
        exit 1
    fi
    ln -fs "$REPO_DIR" /opt/tukano
echo "       Installing from $REPO_DIR..."



info "--> Installing system packages..."
    sudo apt update
    sudo apt install -y python2.7 python-pip python2.7-dev python-dev \
                        redis-server supervisor libxml2-dev libxslt-dev

    sudo systemctl stop redis-server
    sudo systemctl disable redis-server

echo "   âˆš   Apt packages installed:"
echo "           Python, redis, supervisor and some others..."



info "--> Seting up pipenv..."
    python2 -m pip install --user pipenv
    echo "PATH=~/.local/bin:\$PATH" >> ~/.bashrc
    source ~/.bashrc
    export PIPENV_VENV_IN_PROJECT=1
    pipenv install
success "   âˆš   Virtual environment is ready: $(which python) ($(python --version))"


info "--> Generating MAVLink dialect..."
    pipenv run mavgen.py \
        --output="$REPO_DIR/.venv/lib/python2.7/site-packages/pymavlink/dialects/v10/mav_tukano.py" \
        "$REPO_DIR/dialects/mav_tukano.xml"


info "--> Setting up supervisor configuration..."
    echo " > Creating data/logs dir..."
    sudo mkdir "$REPO_DIR/data"
    sudo mkdir "$REPO_DIR/data/logs"
    sudo mkdir "$REPO_DIR/data/pics"
    sudo mkdir "$REPO_DIR/data/videos"


info "--> Setting up supervisor configuration..."
    echo " > Creating symbolic links..."
    sudo rm -f /etc/supervisor/supervisord.conf
    sudo ln -fs "$REPO_DIR/etc/supervisor/tukano.conf" /etc/supervisor/supervisord.conf
    sudo ln -fs "$REPO_DIR" /opt

    echo " > Reloading supervisor service..."
    sudo service supervisor reload
    sleep 3
    supervisorctl status

success "   âˆš   Supervisor is up a running"

if [[ $PATH == *"/opt/tukano/bin"* ]]; then
    echo " > 'tukano' command is in \$PATH"
else
    echo " > Adding 'tukano' to PATH..."
    echo "PATH=/opt/tukano/bin:\$PATH" >> ~/.bashrc
fi

success " âœ… Done."
    echo "       - Commands can be run using 'tukano' command:"
    echo "           e.g. tukano reload"
    echo "                tukano stop"
    echo "       - Data is stored in tukano/data/"


exit 0
