#!/bin/bash

REPO_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )"/.. && pwd )"

function info {
    echo -e "\\n$(tput bold)$(tput setaf 4)" "$@" "$(tput sgr0)"
}
function success {
    echo -e "\\n$(tput bold)" "$@" "$(tput sgr0)"
}
function error {
    echo -e "\\n$(tput bold)$(tput setaf 1)" "$@" "$(tput sgr0)"
}


success " ðŸ”µ    Setup: Development Machine w/ supervisord"
    if [[ "$(uname)" != 'Linux' ]]; then
        error "Not on Linux!: $(uname)"
        exit 1
    fi
    ln -fs "$REPO_DIR" /opt/tukano
echo "       Installing from $REPO_DIR..."



info "--> Installing system packages..."
    curl -sL https://deb.nodesource.com/setup_16.x | sudo -E bash -
    curl https://www.linux-projects.org/listing/uv4l_repo/lpkey.asc | sudo apt-key add -

    echo "deb https://www.linux-projects.org/listing/uv4l_repo/raspbian/stretch stretch main" | sudo tee /etc/apt/sources.list.d/uv4l.list

    sudo apt update
    sudo apt install -y python3.9 python3-pip python3.9-dev python-dev virtualenv \
        redis-server supervisor libxml2-dev libxslt-dev libatlas-base-dev nodejs \
        uv4l uv4l-raspicam uv4l-raspicam-extras uv4l-server uv4l-webrtc

    sudo systemctl stop redis-server
    sudo systemctl disable redis-server

    sudo systemctl stop uv4l_raspicam.service
    sudo systemctl disable uv4l_raspicam.service

echo "   âˆš   Apt packages installed:"
echo "           Python, redis, supervisor, uv4l and some others..."



info "--> Setting up pip + virtualenv..."
    sudo pip3 install --upgrade pip setuptools virtualenv
    virtualenv -p "$(which python3.9)" .venv
    source .venv/bin/activate
success "   âˆš   Virtualenv is active: $(which python) ($(python --version))"



info "--> Creating data directory and subfolders..."
    echo " > Creating data/logs dir..."
    mkdir -p "$REPO_DIR/data/logs"
    mkdir -p "$REPO_DIR/data/pics"
    mkdir -p "$REPO_DIR/data/videos"
    mkdir -p "$REPO_DIR/.venv/lib/python3.9/site-packages/message_definitions/v1.0/"
success "   âˆš   Done"



info "--> Installing python dependencies + copying MAVLink dialect..."
    pip install -r requirements.txt
    cp "$REPO_DIR/dialects/*" "$REPO_DIR/.venv/lib/python3.9/site-packages/message_definitions/v1.0/"
    npm install
success "   âˆš   PyPI requirements are installed: requirements.txt"



info "--> Setting up supervisor configuration..."
    echo " > Creating symbolic links..."
    sudo rm -f /etc/supervisor/supervisord.conf
    sudo ln -fs "$REPO_DIR/etc/supervisor/tukano.conf" /etc/supervisor/supervisord.conf
    sudo ln -fs "$REPO_DIR" /opt

    echo " > Reloading supervisor service..."
    sudo service supervisor reload
    sleep 3
    supervisorctl status

success "   âˆš   Supervisor is up a running"

if [[ $PATH == *"/opt/tukano/bin"* ]]; then
    echo " > 'tukano' command is in \$PATH"
else
    echo " > Adding 'tukano' to PATH..."
    echo "PATH=/opt/tukano/bin:\$PATH" >> ~/.bashrc
fi

success " âœ… Done."
    echo "       - Commands can be run using 'tukano' command:"
    echo "           e.g. tukano reload"
    echo "                tukano stop"
    echo "       - Data is stored in tukano/data/"


exit 0
